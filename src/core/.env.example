# Description: Environment variables for the core app

# ============================================
# Django Core Settings
# ============================================

# Don't turn DEBUG to True in production!
DEBUG=true

# Secret key for Django (generate a secure one for production)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-j^*!ywilx2yq^g$(*wk+fc^f890_r_@=)t!%#1)_2=ofqev17w

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Database Configuration
# ============================================

# For development (SQLite - default if not set):
# Leave DATABASE_URL commented out to use SQLite automatically
# DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL):
# Uncomment and set your PostgreSQL connection string
# DATABASE_URL=postgresql://username:password@host:port/database_name
#
# Examples:
# DATABASE_URL=postgresql://amza_user:securepassword@localhost:5432/amza_db
# DATABASE_URL=postgresql://user:pass@db.example.com:5432/amza_db?sslmode=require
#
# Note: Most cloud platforms (Heroku, Railway, Render) set DATABASE_URL automatically

# ============================================
# External APIs
# ============================================

# Open Exchange Rates API key for DjangoMoney currency conversion
OPEN_EXCHANGE_RATES_APP_ID=1234567890

# Keepa API Configuration (for Amazon product pricing)
KEEPA_API_KEY=your_keepa_api_key_here
KEEPA_DAILY_TOKEN_LIMIT=5000

# ============================================
# Currency Settings
# ============================================

# Currencies to be used in the app (comma-separated)
CURRENCIES='USD,MXN'

# ============================================
# CORS Configuration
# ============================================

# Allowed origins for CORS (comma-separated URLs)
# Example for production with frontend:
# CORS_ALLOWED_ORIGINS=https://myapp.com,https://www.myapp.com
# Leave empty in development (will allow all origins when DEBUG=true)
CORS_ALLOWED_ORIGINS=

# ============================================
# Railway Deployment (Production)
# ============================================

# Railway automatically sets DATABASE_URL for PostgreSQL
# You don't need to set it manually in Railway dashboard

# Required environment variables to set in Railway:
# 1. DEBUG=false
# 2. SECRET_KEY=<generate-secure-key>
# 3. ALLOWED_HOSTS=<your-app>.up.railway.app
# 4. OPEN_EXCHANGE_RATES_APP_ID=<your-api-key>
# 5. KEEPA_API_KEY=<your-api-key>
# 6. CURRENCIES='USD,MXN'

# Optional:
# 7. KEEPA_DAILY_TOKEN_LIMIT=5000
# 8. CORS_ALLOWED_ORIGINS=https://frontend.com (if you have a separate frontend)
